<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.MemberFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_marginVertical="8dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/member_id" />

            <EditText
                android:id="@+id/editMemberID"
                android:layout_weight="1"
                android:autofillHints="@string/member_id"
                android:hint="@string/member_id"
                android:inputType="number" />
        </TableRow>

        <TableRow android:layout_marginVertical="8dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/member_name" />

            <EditText
                android:id="@+id/editMemberName"
                android:layout_weight="1"
                android:autofillHints="@string/member_name"
                android:hint="@string/member_name"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow android:layout_marginVertical="8dp">

            <TextView
                android:layout_marginEnd="16dp"
                android:text="@string/member_info" />

            <EditText
                android:id="@+id/editMemberInfo"
                android:layout_weight="1"
                android:autofillHints="@string/member_info"
                android:hint="@string/member_info"
                android:inputType="phone" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
